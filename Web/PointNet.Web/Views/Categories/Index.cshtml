
@using PointNet.Web.ViewModels.Catalog
@model CatalogViewModel
@{
    ViewData["Title"] = "Catalog";
}

<h1>Catalog</h1>

<html>
<head>
    <meta charset="utf-8">
    <title></title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/shoppingCart.css" type="text/css" />
</head>

<body>
    <div class="container">
        <h2 class="text-center">Categories</h2>
        <hr class="solid">
        <div class="row mx-auto">
            @{
                foreach (var category in Model.Categories)
                {
                    <div class="col-md-3 mx-auto">
                        <div class="product-top">
                            <h3 class="text-center">@category.Name</h3>
                            <img class="custom-img-thumbnail" src="@category.ImageuUrl">
                            <div class="text-center">
                                <a asp-controller="Products" asp-action="Index" asp-route-categoryId="@category.Id"><button type="button" class="btn btn-primary btn-lg" title="View More">View More</button></a>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</body>
</html>