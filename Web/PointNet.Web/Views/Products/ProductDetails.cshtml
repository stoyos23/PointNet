
@using PointNet.Web.ViewModels.Catalog
@model ProductViewModel
@{
    ViewData["Title"] = "ProductDetails";
}
<div class="container">
    <div class="row">
        <div class="col-md-6 mb-4">

            <img src="@Model.ImageUrl" class="img-fluid" alt="">

        </div>
        <!--Grid column-->
        <!--Grid column-->
        <div class="col-md-6 mb-4">

            <!--Content-->
            <div class="p-4">

                <div class="mb-3">
                    <a href="">
                        <span class="badge purple mr-1">Category 2</span>
                    </a>
                    <a href="">
                        <span class="badge blue mr-1">New</span>
                    </a>
                    <a href="">
                        <span class="badge red mr-1">Bestseller</span>
                    </a>
                </div>

                <p class="lead">
                    <h4>$@Model.Price</h4>
                </p>

                <p class="lead font-weight-bold">Description</p>

                <p>
                    @Model.Description
                </p>

                <form asp-controller="ShoppingCart" asp-action="AddNewProduct" class="d-flex justify-content-left">
                    <!-- Default input -->
                    <input asp-for="Quantity" type="number" value="1" aria-label="Search" class="form-control" style="width: 100px">

                    <button asp-controller="ShoppingCart" asp-action="AddToCart" asp-route-id="@Model.Id" class="btn btn-primary btn-sm my-0 p" type="submit">
                        Add to cart
                    </button>
                </form>
                <div>
                    <p>Available Quantity: @Model.Quantity</p>
                </div>

            </div>
            <!--Content-->

        </div>
        <!--Grid column-->
    </div>
</div>
<!--Grid row-->

<hr>

<h3>Comments</h3>

<partial name="_CommentsPartial" />
<!--Grid row-->
<div class="row d-flex justify-content-center wow fadeIn">

    <!--Grid column-->
    <div class="col-md-6 text-center">

        <h4 class="my-4 h4">Additional information</h4>

        <p>
            Lorem ipsum dolor sit amet consectetur adipisicing elit. Natus suscipit modi sapiente illo soluta odit
            voluptates,
            quibusdam officia. Neque quibusdam quas a quis porro? Molestias illo neque eum in laborum.
        </p>

    </div>
    <!--Grid column-->

</div>
<!--Grid row-->

