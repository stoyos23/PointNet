
@using PointNet.Web.ViewModels.Catalog
@model CatalogViewModel
@{
    ViewData["Title"] = "Catalog";
}

<h1>Catalog</h1>

<div class="row">
    <div class="col-4">
        <div class="list-group" id="list-tab" role="tablist">
            @foreach (var category in Model.Categories)
            {
                <a class="list-group-item list-group-item-action " data-animation="" asp-controller="Catalog" asp-action="ListProductsInCategory" asp-route-id="@category.Id">
                    @category.Name
                </a>
            }
        </div>
    </div>
</div>